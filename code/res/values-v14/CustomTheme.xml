<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
           parent="@style/Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/cleanActionBar</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Example</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/cleanActionBar</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Example</item>
    </style>
    
    <color name="cleanColor">#D2D7D3</color>
    <style name="cleanActionBar" parent="@style/Widget.AppCompat.ActionBar">
        <item name="android:background">@color/cleanColor</item>
        <item name="android:backgroundStacked">@color/cleanColor</item>
        <item name="android:backgroundSplit">@color/cleanColor</item>        
               
    </style>
    
    <style name="DropDownNav.Example" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@color/cleanColor</item>
        <item name="android:popupBackground">@color/cleanColor</item>
        <item name="android:dropDownSelector">@color/cleanColor</item>
    </style>
</resources>
